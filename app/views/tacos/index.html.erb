<div class="page-header">
  <h1>Our Glorious Tacos <small>No Lettuce</small></h1>
</div>

<div class="row">
<% @tacos.each do |taco| %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag taco.photo %>
      <div class="caption">
        <h3><%= taco.name %></h3>
        <p><%= truncate taco.description, length: 200 %></p>
        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>
  </div>

<% end %>
</div>
